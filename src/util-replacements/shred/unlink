export PATH="${SPIKE_OLD_PATH}"

if [ "$1" = '--' ]; then
    shift 1
elif [ "${1:0:1}" = '-' ]; then
    unlink "$1"
    exit 0
fi

shred ${SPIKE_SHRED_OPTS} -- "$@"
